<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/restaurant_title"
        android:text="@string/option_title"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:orientation="vertical"
        android:layout_weight="9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:text="Affichage des boutons sur la carte"
                android:layout_weight="8"
                android:textSize="18sp" />

            <Switch
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:id="@+id/buttonMapSwitchOption"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:text="Distance en miles "
                android:layout_weight="8"
                android:textSize="18sp" />

            <Switch
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:id="@+id/milesSwitchOption"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Sauvegarder les options"
            android:id="@+id/saveOptionsBtn"
            android:drawableLeft="@drawable/save"/>
    </LinearLayout>
</LinearLayout>